<script>
    $(function () {
        aroundDateil.init();
    });
    var aroundDateil = (function (obj) { return obj; })(new function () {

        function init() {
            var url = location.search.split('=')[1];
            
            common.post("/Client/ShopHome/HomeDetail", { ID: url }, function (res) {
                
                template.config("escape", false);
                var html = template("aroundTemplate", { list: res.Data.shopBanner });
                $("#around_detail_image").html(html);//店铺轮播图

                var swiper = new Swiper('.swiper-container', {
                    pagination: '.swiper-pagination',
                    paginationClickable: true,
                    autoplay: 3000,
                    loop: true,
                    paginationType: 'fraction'
                });
                
                var name = template("aroundNameTemplate", res.Data.detail);
                $("#around_detail_name").html(name);//商品名和价格

                var comment = template("commentTemplate", res.Data.commentnum);
                $("#around_detail_comment").html(comment);//评论总数
                var total = template("commentOneTemplate", res.Data.coment);
                $("#around_detail_oneComment").html(total);//评论

                var content = template("contentAroundTemplate", res.Data.detail);
                $("#around_detail_content").html(content);
                
            })
        }

        return {
            init,init
        }
    });

</script>
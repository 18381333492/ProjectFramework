<body>
    <div class="paysuccess">
       
        <!--0 - 未通过 1 - 已通过 2 - 拒绝-->
        @if (Model == null)
            {
            <img src="~/Areas/Client/Content/images/slice/ok.png" alt="商户入驻成功" />
            <p>申请成功！</p>
            <div class="turnperson  co333 fz13" style="max-width:180px;">
                请等待审核<br />【友客分享】期待与您的合作<br />
                <span id="time">3</span>S后跳转至<a href="/Client/ClientCenter/Index">个人中心</a>
            </div>
        }
        @if (Model == 0)
        {
            <img src="~/Areas/Client/Content/images/slice/ok.png" alt="商户入驻成功" />
            <p>申请审核中！</p>
            <div class="turnperson  co333 fz13" style="max-width:180px;">
                请等待审核<br />【友客分享】期待与您的合作<br />
                <span id="time">3</span>S后跳转至<a href="/Client/ClientCenter/Index">个人中心</a>
            </div>
        }
        @if (Model == 1)
        {
            <img src="~/Areas/Client/Content/images/slice/ok.png" alt="商户入驻成功" />
            <p>已是商家！</p>
            <div class="turnperson  co333 fz13" style="max-width:180px;">
                【友客分享】商家
                <span id="time">3</span>S后跳转至<a href="/Client/ClientCenter/Index">个人中心</a>
            </div>
        }
        @if (Model == 2)
        {
            <img src = "/Areas/Client/Content/images/loser.png" alt="商户入驻失败"/>
            <p>申请审核失败！</p>
            <div class="turnperson  co333 fz13" style="max-width:180px;">
                <a href="/Client/ClientCenter/Business?New=1">重新申请</a>
            </div>
        }
    </div>
    <input type="hidden" id="Model" value="@Model" />
</body>
</html>
<script src="~/scripts/lib/client.common.js"></script>
<script type="text/javascript">
    $(function () {
        var model = $("#Model").val();
        if (model != 2) {
            scope.countDown();
        }
    });

    var scope = (function (obj) { return obj; })(new function () {

        var i = 3;
        var time;

        /*3s计时器*/
        function countDown() {
            $('#time').text(i);
            if (i == 0) {
                location.href = "/Client/ClientCenter/Index";
                clearTimeout(time);
            } else {
                time = setTimeout(countDown, 1000);
            }
            i--;
        }

        return {
            countDown: countDown
            }
    });
</script>
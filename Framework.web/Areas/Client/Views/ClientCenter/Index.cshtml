            <span id="Message" class="w-news"></span>
        </div>
        <div class="w-paddingLeftRight02 w-marginBottom02" style="margin-top:.1rem;">
            <div class="w-padding02 w-bgcolorFFF w-forebox w-overflowH">
                <div class="order" param="0" style="background-image: url('/Areas/Client/Content/images/slice/order01.png');background-size: .41rem .45rem;"><span id="payCount"></span><h4 class="w-font14 w-color666 w-textalignC">待付款</h4></div>
                <div class="order" param="1" style="background-image: url('/Areas/Client/Content/images/slice/order02.png');background-size: .45rem .41rem;"><span id="useCount"></span><h4 class="w-font14 w-color666 w-textalignC">待使用</h4></div>
                <div class="order" param="2" style="background-image: url('/Areas/Client/Content/images/slice/order03.png');background-size: .39rem .39rem;"><span></span><h4 class="w-font14 w-color666 w-textalignC">已核销</h4></div>
                <div class="order" param="3" style="background-image: url('/Areas/Client/Content/images/slice/order04.png');background-size: .42rem .42rem;"><span></span><h4 class="w-font14 w-color666 w-textalignC">维权订单</h4></div>
            </div>
        </div>
        <div class="w-paddingLeftRight02 w-position w-marginBottom02 " style="padding-bottom:.01rem;">
            <div class="w-padding02 w-bgcolorFFF w-linebox w-marginBottom03" style="padding-bottom:.5rem;">
                <div class="w-height06 w-borderBeee order"  param="-1"  style="background-image: url('/Areas/Client/Content/images/slice/orderlist01.png');background-size: .31rem .35rem;"><h4 class="w-font14 w-color666">全部订单</h4></div>
                <div id="PersonInfo" class="w-height06 w-borderBeee" style="background-image: url('/Areas/Client/Content/images/slice/orderlist02.png');background-size: .3rem .34rem;"><h4 class="w-font14 w-color666">个人信息</h4></div>
                <div id="Collection" class="w-height06 w-borderBeee" style="background-image: url('/Areas/Client/Content/images/slice/orderlist03.png');background-size: .33rem .28rem;"><h4 class="w-font14 w-color666">收藏夹</h4></div>
                <div id="Coupon"     class="w-height06 w-borderBeee" style="background-image: url('/Areas/Client/Content/images/slice/orderlist04.png');background-size: .33rem .28rem;"><h4 class="w-font14 w-color666">我的优惠券</h4></div>
                <div id="HelpCenter" class="w-height06 w-borderBeee" style="background-image: url('/Areas/Client/Content/images/slice/orderlist05.png');background-size: .33rem .36rem;"><h4 class="w-font14 w-color666">帮助中心</h4></div>
                @if (ViewBag.iClientType ==0)
                {
                <div class="w-height06" style="background-image: url('/Areas/Client/Content/images/slice/orderlist07.png');background-size: .31rem .29rem;"><a class="sMallPhone" href="tel:9"><h4 class="w-font14 w-color666">客服电话</h4></a></div>
                }
                else
                { 
                    <div class="w-height06 w-borderBeee" style="background-image: url('/Areas/Client/Content/images/slice/orderlist07.png');background-size: .31rem .29rem;"><a class="sMallPhone" href="tel:9"><h4 class="w-font14 w-color666">客服电话</h4></a></div>
                    <div id="ShareCenter" class="w-height06" style="background-image: url('/Areas/Client/Content/images/slice/orderlist06.png');background-size: .35rem .38rem;"><h4 class="w-font14 w-color666">分享中心</h4></div>
                }
            </div>
            <input id="Quit" type="button" value="退出登录" class="w-inputA" style="position: absolute;bottom:0;left:50%;margin-left: -1.5rem;" />
        </div>
        <div class="w-threebox w-overflowH w-textalignC w-font0 w-marginBottom01">
            @if (ViewBag.iClientType == 1)
            {<!--分享客-->
                <span id="Partner" class="w-font13 w-color666" style="border-right: 1px solid #999;">成为合伙人</span>
                <span id="Business" class="w-font13 w-color666">商家入驻</span>
            }
            else
            {<!--普通会员-->
                <span id="ShareClient" class="w-font13 w-color666">成为分享客</span>
                <span id="Partner" class="w-font13 w-color666" style="border-right: 1px solid #999;border-left: 1px solid #999;">成为合伙人</span>
                <span id="Business" class="w-font13 w-color666">商家入驻</span>
            }
        </div>
        @if (ViewBag.iClientType == 0)
        {
            <div class="w-textalignC">
                <span class="w-iphone"></span>
            </div>
        }

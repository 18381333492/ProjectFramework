<script src="~/scripts/lib/client.common.js"></script>
<script type="text/javascript">
    $(function () {
        //加载用户相关信息
        scope.GetClientInfo();
        scope.bingEvent();
        scope.Quit();
    });

    var scope = (function (obj) { return obj; })(new function () {

        /*!
        * 获取会员昵称sNickName
        */
        function GetClientNickName() {
            common.post("/Client/ClientCenter/GetClientNickName", null, function (r) {
                $('#sNickName').text(r.Data.sNickName);
                $('.sMallPhone').attr("href", "tel:" + r.Data.sMallPhone + "");
                $('.w-iphone').text(r.Data.sMallPhone);
            });
        }

        /*!
        * 获取待付款和待使用订单未读数目和获取站内信未读条数
        */
        function GetClientInfo() {
            common.post("/Client/ClientCenter/GetClientInfo", null, function (r) {
                for (var key in r.Data) {
                    if (Number(r.Data[key]) == 0) {
                        $('#' + key).hide();
                    }
                    else {
                        if (key == "infoCount") {
                            $('#Message').html("<b>"+r.Data[key]+"</b>");
                            
                        }
                        else {
                            $('#' + key).addClass('w-Sactive');
                            $('#' + key).text(r.Data[key]);
                          
                        }
                    }
                }
                GetClientNickName();
            });
        }

        //退出登录
        function Quit() {
            $('#Quit').on("click", function () {
                confirm("确定要退出?", {
                    "text": "确定", fn: function () {
                        common.post("/Client/ClientCenter/Quit", null, function (r) {
                            location.href = "/Client/ClientCenter/Index";
                        })
                    }
                }, {
                    "text": "取消", fn: function () {
                        return;
                    }
                });
            });
        }

        //绑定点击事件
        function bingEvent() {

            // 返回首页
            $(".w-home").on("click", function () {

                window.location.href = "/Client/ClientHome";

            });
            
            $('.order').on("click", function () {
                var iState = $(this).attr("param");
                location.href = "/Client/ClientCenter/Order?iState=" + iState;
            })

            $('#Message').on("click", function () { location.href = "/Client/ClientCenter/Message"; }); //站内信
            $('#HelpCenter').on("click", function () { location.href = "/Client/ClientCenter/HelpCenter"; });//帮助中心
            $('#PersonInfo').on("click", function () { location.href = "/Client/ClientCenter/PersonInfo"; });//个人信息
            $('#Collection').on("click", function () { location.href = "/Client/ClientCenter/Collection"; });//收藏夹
            $('#Coupon').on("click", function () { location.href = "/Client/ClientCenter/Coupon"; });//我的优惠券
            $('#ShareCenter').on("click", function () { location.href = "/Client/ShareCenter/Index"; });//分享中心

            $('#ShareClient').on("click", function () { location.href = "/Client/ClientCenter/Protocol?sTitle=关于分享客"; });//成为分享客
            $('#Partner').on("click", function () { location.href = "/Client/ClientCenter/Protocol?sTitle=关于合伙人"; });//成为合伙人
            $('#Business').on("click", function () { location.href = "/Client/ClientCenter/Protocol?sTitle=商家入驻须知"; });//商家入驻

        }

        return {
            GetClientInfo: GetClientInfo,
            bingEvent: bingEvent,
            Quit: Quit
        }

    });
</script>
<body>
    <div class="sharecenter">
        <h4 class="co333">@Model.sTitle</h4>
      <p class="w-imgBox">
          @Html.Raw(Model.sContent)
      </p>
    </div>
    <div class="lzxsure mt40">
        @if (Model.sTitle == "关于分享客")
        {
            <button id="commit"  path="ShareClient" type="button">申请成为分享客</button>
        }
        @if (Model.sTitle == "关于合伙人")
        {
            <button id="commit"  path="Partner" type="button">合伙人申请</button>
        }
        @if (Model.sTitle == "商家入驻须知")
        {
            <button id="commit" path="Business" type="button">入驻申请</button>
        }
    </div>
</body>

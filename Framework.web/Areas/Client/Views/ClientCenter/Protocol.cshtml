<script src="~/scripts/lib/client.common.js"></script>
<script type="text/javascript">
    $(function () {
        $('#commit').on("click", function () {
            var path = $(this).attr("path");
            location.href = "/Client/ClientCenter/" + path + "";
        });
    });
</script>
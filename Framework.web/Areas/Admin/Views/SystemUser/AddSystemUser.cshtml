
<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />
<link href="~/scripts/plug-in/address/city-picker/city-picker.css" rel="stylesheet" />
<script src="~/scripts/plug-in/address/city-picker/city-picker.data.js"></script>
<script src="~/scripts/plug-in/address/city-picker/city-picker.js"></script>

<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:false" style="padding:1px;margin:1px">
    <form style="width:100%;height:100%;" id="add_systemuser_form">
        <table class="styletable" style="height:100%">
            <tbody>
                <tr>
                    <td>用户登录名</td>
                    <td>                        
                        <input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入用户登录名',required:true,validType:['chartLengthBetween[4,20,\'用户登录名\']','isHtmlValidate']" name="sLoginName" />
                    </td>
                </tr>
                <tr>
                    <td>登录密码（默认123）</td>
                    <td>
                        <input class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',value:'123',validType:['chartLengthBetween[3,15,\'密码\']']" name="sPassWord" />
                    </td>
                </tr>
                <tr>
                    <td>确认密码</td>
                    <td>
                        <input class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输再次入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',value:'123',validType:['chartLengthBetween[3,15,\'密码\']']" name="sPassWord2" />
                    </td>
                </tr>
                <tr>
                    <td>所处地区</td>
                    <td>
                        <div style="position: relative;">
                            <input style="width:180px" placeholder="四川省/成都市/锦江区" readonly type="text" name="region" data-toggle="city-picker">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>联系地址</td>
                    <td>
                        <input class="easyui-textbox" data-options="width:180,type:'text',required:false,validType:['maxLength[30]','isHtmlValidate']" name="sAddress" />
                    </td>
                </tr>
                <tr>
                    <td>联系手机</td>
                    <td>
                        <div style="position: relative;">
                            <input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入联系电话',required:true,validType:['isPhoneNum']" name="sMobileNum" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>用户名</td>
                    <td>
                        <input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入用户名',required:true,validType:['chartLengthBetween[3,15,\'用户名\']','isHtmlValidate']" name="sUserName" />
                    </td>
                </tr>
                <tr>
                    <td>用户昵称</td>
                    <td>
                        <input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入用户昵称',required:true,validType:['chartLengthBetween[4,20,\'用户昵称\']','isHtmlValidate']" name="sUserNickName" />
                    </td>
                </tr>
                <tr>
                    <td>用户性别</td>
                    <td>
                        <input type="radio" name="tSex" value="1" checked />男&emsp;/&emsp;<input type="radio" name="tSex" value="0" />女
                    </td>
                </tr>
                <tr>
                    <td>用户类型</td>
                    <td>
                        <input class="easyui-combobox" data-options="valueField: 'id',    
                                                                   textField: 'text',
                                                                   panelHeight:'auto',
                                                                   data:[{'id':0,'text':'平台用户'},
                                                                   {'id':1,'text':'店铺'},
                                                                    {'id':2,'text':'合伙人'}]" name="tUserType" id="add_userType"/>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
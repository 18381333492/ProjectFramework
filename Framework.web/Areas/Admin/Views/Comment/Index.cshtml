<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />
<script src="~/Areas/Admin/Scripts/Comment/Index.js"></script>

<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding:2px;">
    <form id="comment_index_form" style="width:100%;height:100%" ;>
        <div id="comment_index_tool_div" style="padding:15px;">
            <span>模糊查询：</span>
            <input id="comment_index_input_seach_where" name="sWhere" class="easyui-textbox" data-options="prompt:'商品名称/订单号/评价人/评价内容'" style="width:300px">
            &emsp;&emsp;
            <span>状态：</span>
           <!--是否回复（0-否 1-是）-->
            <select name="bIsReplay" class="easyui-combobox" style="width:100px;" data-options="panelHeight:'auto'">
                <option value="-1">全部</option>
                <option value="0">未回复</option>
                <option value="1">已回复</option>
            </select>
            &emsp;&emsp;
            <a id="comment_index_btn_seach" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'">查询</a>
            <br /><br />
            @Html.Partial("~/Areas/Admin/Views/Shared/_Button.cshtml")
        </div>

        <table id="comment_index_datagrid"></table>
    </form>
</div>
<div id="comment_show_big_pic">
    <img style="width:inherit;height:inherit;" ondblclick="$('#comment_show_big_pic').dialog('close')"/>
</div>
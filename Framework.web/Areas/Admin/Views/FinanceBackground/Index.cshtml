<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding:2px;">
    <form id="background_index_form" style="width:100%;height:100%" ;>
        <div id="background_index_tool_div" style="padding:15px;">
            <div style="margin-bottom:10px">
                <a href="#" class="easyui-linkbutton" id="background_index_a_detail" data-options="iconCls:'icon-more'">详情</a>
                <!--合伙人：1 分享客：2 店铺：3-->
                <select name="sRole" class="easyui-combobox" style="width:100px;" data-options="panelHeight:'auto'">
                    <option value="-1">全部</option>
                    <option value="1">分享客</option>
                    <option value="2">店铺</option>
                    <option value="3">合伙人</option>
                </select>
            </div>
            <div style="margin-bottom:10px">
                <input type="hidden" id="background_index_dValidDateStart"  name="dValidDateStart" />
                <input type="hidden" id="background_index_dValidDateEnd" name="dValidDateEnd" />

                <a href="#" class="easyui-linkbutton" id="background_index_a_all" data-options="iconCls:'icon-sum'">全部</a>
                <a href="#" class="easyui-linkbutton" id="background_index_a_today" data-options="iconCls:'icon-sum'">今日</a>
                <a href="#" class="easyui-linkbutton" id="background_index_a_yesterday" data-options="iconCls:'icon-sum'">昨日</a>
                <a href="#" class="easyui-linkbutton" id="background_index_a_week" data-options="iconCls:'icon-sum'">最近一周</a>
                <a href="#" class="easyui-linkbutton" id="background_index_a_month" data-options="iconCls:'icon-sum'">最近一月</a>
                &emsp;
                <span>下单时间：<input readonly="readonly" id="background_index_input_orderDateStart" onclick="modules.get('cache').getCache('laydate').laydate({ istime: false, format: 'YYYY-MM-DD' })" class="textbox" style="height:20px;" /></span>
                ---
                <span><input readonly="readonly" id="background_index_input_orderDateEnd" onclick="modules.get('cache').getCache('laydate').laydate({ istime: false, format: 'YYYY-MM-DD' })" class="textbox" style="height:20px;" /></span>
                &emsp;&emsp;&emsp;
                <input id="background_index_input_seach_where" name="sName" class="easyui-textbox" data-options="min:0,prompt:'店铺名称/合伙人/分享客'" style="width:200px">
                &emsp;
                <a id="background_index_btn_seach" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'">搜索</a>
            </div>
            <div>
                <span>服务费总计：￥</span><span id="background_index_span_serviceMoney">0.00</span>
            </div>
        </div>

        <table id="background_index_datagrid"></table>
    </form>
</div>

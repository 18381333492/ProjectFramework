<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />
<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding:2px">
    <form style="width:100%;height:100%;" id="add_role_form">
        <table class="styletable" style="height:100%">
            <tbody>
                <tr>
                    <td>角色名字</td>
                    <td>
                        <input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入角色名字',required:true,validType:['chartLengthBetween[2,12,\'角色名称\']','isHtmlValidate']" maxlength="12" name="sRoleName" />
                    </td>
                </tr>
                <tr>
                    <td>排序号</td>
                    <td>
                        <input class="easyui-numberbox" data-options="width:180,type:'text',missingMessage:'请输入排序号',required:true,validType:['isNumber','minInt[0]','maxInt[9999]']" name="iOrder" />
                    </td>
                </tr>
                <tr>
                    <td>是否启用</td>
                    <td style="padding:0px 0px 0px 40px">
                        <input type="radio" name="bEnable" value="true" checked /><span style="color:darkgreen">启用</span>
                        <input type="radio" name="bEnable" value="false" /><span style="color:red">禁用</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
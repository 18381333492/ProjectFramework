<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />
<link href="~/scripts/plug-in/address/city-picker/city-picker.css" rel="stylesheet" />
<script src="~/scripts/plug-in/address/city-picker/city-picker.data.js"></script>
<script src="~/scripts/plug-in/address/city-picker/city-picker.js"></script>
<script src="~/scripts/plug-in/address/baiduaddress/scripts/baidu.map.js"></script>


<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding-left:2px; padding-top:1px;margin:1px">
    <form id="add_shop_form" style="width:99%;height:100%">
        <table class="styletable">
            <tr>
                <td>联系电话：</td><td><input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入联系电话',required:true,validType:['isPhoneNum']" name="sMobileNum" /></td>
            </tr>
            <tr>
                <td>店主姓名：</td><td><input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入店主姓名',required:true,validType:['chartLengthBetween[2,15,\'店主姓名\']','isHtmlValidate']" name="sHeadName" />
</td>
            </tr>
            <tr>
                <td>店铺名字：</td><td><input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入店铺名',required:true,validType:['chartLengthBetween[1,50,\'店铺名\']','isHtmlValidate']" name="sShopName" /></td>
            </tr>
            <tr>
                <td>店铺地址：</td><td><input class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入详细地址',required:true,validType:['chartLengthBetween[0,30,\'店铺地址\']','isHtmlValidate']" name="sAddress" /></td>
            </tr>
            <tr>
                <td>所在区域：</td><td><input style="width:180px" placeholder="选择地区" readonly type="text" name="region" data-toggle="city-picker" id="add_shop_pass_address"></td>
            </tr>
            <tr>
                <td>身份证：(正反面)<input type="hidden"  id="shop_add_idCardImges" name="sImagePath"/></td><td>
                 <div id="shop_add_idCardImges_upload" class="uploader">
                            <div class="queueList">
                                <div id="dndArea" class="placeholder">
                                    <div id="filePicker"></div>
                                </div>
                            </div>
                        </div>
                </td>
            </tr>
            <tr>
                <td>主营业务：</td><td><input type="text" style="width:500px;height:150px" name="sMainBusiness"/></td>
            </tr>
            <tr>
                <td>登录名：</td><td><input id="add_shop_name" class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入登录名',required:true,validType:['chartLengthBetween[3,20,\'登录名\']','isHtmlValidate']" name="sLoginName" /></td>
            </tr>
            <tr>
                <td>密码：</td><td>
                <input  class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',validType:['chartLengthBetween[6,15,\'密码\']']" name="sPassWord" /></td>
            </tr>
            <tr>
                <td>确认密码：</td><td><input class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输再次入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',validType:['chartLengthBetween[6,15,\'密码\']']" name="sPassWord2" /></td>
            </tr>
        </table>

    </form>
</div>

@model Framework.DTO.EHECD_SystemUserDTO

<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />

<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding-left:2px; padding-top:1px;margin:1px">
    <form id="update_shop_password" style="width:100%;height:100%">
        <table class="styletable" style="width:100%;height:90%">
            <tr>
                <td>登录名</td>
                <td>
                    <label>@Model.sLoginName</label>
                    @*<input id="shop_sLoginName" class="easyui-panel" type="text" name="sLoginName" value="@Model.sLoginName"data-options="height:25,width:180,editable:true"/>*@
                <input type="hidden" value="@Model.ID" name="ID"/>
                </td>
            </tr>
            <tr>
                <td>密码</td>
                <td>
                    <input class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',validType:['chartLengthBetween[6,15,\'密码\']']" name="sPassWord" />
                </td>
            </tr>
            <tr>
                <td>确认密码</td>
                <td>
                    <input class="easyui-textbox" data-options="height:25,width:180,required:true,missingMessage:'请输再次入登录密码',iconCls:'icon-lock',iconAlign:'left',type:'password',validType:['chartLengthBetween[6,15,\'密码\']']" name="sPassWord2" />
                </td>
            </tr>
        </table>

    </form>
</div>

@model Framework.DTO.EHECD_ScannerDTO
<link href="~/Areas/Admin/Content/gridtable.css" rel="stylesheet" />

<div class="easyui-panel" data-options="closable:false,collapsible:false,minimizable:false,maximizable:false,border:false,fit:true" style="padding-left:2px; padding-top:1px;margin:1px">
    <form id="edit_scanner_form" style="width:99%;height:99%">
        <table class="styletable">
            <tr>
                <td>登录名</td>
                <td>
                    <input type="hidden" value="@Model.ID" name="ID">
                    <input type="hidden" value="@Model.sLoginName" id="ex_scanner_loginname">
                    <input value="@Model.sLoginName" id="scanner_loginname" class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入登录名',required:true,validType:['chartLengthBetween[3,15,\'登录名\']','isHtmlValidate']" name="sLoginName" />
                </td>
            </tr>
            <tr>
                <td>真实姓名</td>
                <td>
                    <input value="@Model.sReallyName" class="easyui-textbox" data-options="width:180,type:'text',missingMessage:'请输入真实姓名',required:true,validType:['chartLengthBetween[2,15,\'真实姓名\']','isHtmlValidate']" name="sReallyName" />
                </td>
            </tr>
            <tr>
                <td>电话</td>
                <td>
                    <input value="@Model.sPassword" name="sPassword" type="hidden"/>
                    <input value="@Model.sPhone" class="easyui-textbox" data-options="validType:['isPhoneNum']"  style="width:180px"  name="sPhone" />
                </td>
            </tr>
            
        </table>

    </form>
</div>


